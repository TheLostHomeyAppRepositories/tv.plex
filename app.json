{
  "_comment": "This file is generated. Please edit .homeycompose/app.json instead.",
  "id": "tv.plex",
  "version": "1.0.0",
  "compatibility": ">=5.0.0",
  "brandColor": "#E5A00D",
  "sdk": 3,
  "name": {
    "en": "Plex"
  },
  "description": {
    "en": "Stream Smarter with Plex"
  },
  "category": [
    "video"
  ],
  "permissions": [],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Emile Nijssen",
    "email": "emile@emilenijssen.nl"
  },
  "flow": {
    "triggers": [
      {
        "id": "recently_added",
        "title": {
          "en": "New media has been added"
        },
        "hint": {
          "en": "When Plex has added new media to the library."
        },
        "tokens": [
          {
            "type": "string",
            "name": "title",
            "title": {
              "en": "Title"
            },
            "example": {
              "en": "Star Trek â€” The search for Spock"
            }
          }
        ],
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=pms"
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "rescan",
        "title": {
          "en": "Scan Library Files"
        },
        "hint": {
          "en": "Rescan the library for new files"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=pms"
          },
          {
            "type": "autocomplete",
            "name": "library",
            "placeholder": {
              "en": "Library"
            }
          }
        ]
      },
      {
        "id": "refresh",
        "title": {
          "en": "Refresh Library Metadata"
        },
        "hint": {
          "en": "Refresh the library metadata"
        },
        "args": [
          {
            "type": "device",
            "name": "device",
            "filter": "driver_id=pms"
          },
          {
            "type": "autocomplete",
            "name": "library",
            "placeholder": {
              "en": "Library"
            }
          }
        ]
      }
    ]
  },
  "drivers": [
    {
      "id": "pms",
      "name": {
        "en": "Plex Media Server"
      },
      "class": "other",
      "capabilities": [
        "speaker_track",
        "speaker_album",
        "speaker_artist"
      ],
      "images": {
        "large": "/drivers/pms/assets/images/large.png",
        "small": "/drivers/pms/assets/images/small.png"
      },
      "pair": [
        {
          "id": "auth"
        },
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ]
}